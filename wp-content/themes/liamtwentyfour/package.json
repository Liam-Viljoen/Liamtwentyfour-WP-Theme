{
  "name": "liamtwentyfour",
  "version": "1.0.0",
  "description": "Liams custom theme",
  "scripts": {
    "build:admin": "wp-scripts build src/admin.js --output-path=build/admin",
    "build:frontend": "wp-scripts build src/frontend.js --output-path=build/frontend",
    "build": "npm run build:admin && npm run build:frontend",
    "start:admin": "wp-scripts start src/admin.js --output-path=build/admin",
    "start:frontend": "wp-scripts start src/frontend.js --output-path=build/frontend",
    "start": "npm run start:admin & npm run start:frontend"
  },
  "devDependencies": {
    "@wordpress/scripts": "^28.6.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7"
  },
  "dependencies": {
    "gsap": "^3.12.5"
  }
}
